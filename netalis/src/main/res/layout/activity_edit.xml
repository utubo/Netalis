<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="utb.dip.jp.netalis.activities.EditActivity">

    <FrameLayout
        android:id="@+id/edit_linerLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText"
                android:text="New Task"
                android:textCursorDrawable="@null"
                android:padding="6dp"
                android:gravity="top" />
            <TextView
                android:id="@+id/task_edit_timestamp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:layout_margin="2dp"
                android:alpha=".7"
                android:text="1999/01/01"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/priority_buttons_linerLayout"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:layout_width="fill_parent"
            android:layout_height="30dp">
        </LinearLayout>
        <HorizontalScrollView
            android:id="@+id/color_buttons_container"
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/color_buttons_linerLayout"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp">
            </LinearLayout>
        </HorizontalScrollView>
    </FrameLayout>
</RelativeLayout>
